@using System.Security.Claims
@using $safeprojectname$.Models
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body class="nav-md footer_fixed">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-book"></i> <span>Tho.Tran</span></a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="@Url.Content("~/Content/images/ava.png")" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@this.User.Identity.Name</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />

                    @Html.Partial("_SideBar")

                    @Html.Partial("_SideBarFooter")


                </div>
            </div>

            @Html.Partial("_TopNav", new LoggedUser(this.User as ClaimsPrincipal))

            <div class="right_col" role="main">
                <div class="row">
                    @RenderBody()
                </div>

            </div>

            @Html.Partial("_Footer")
        </div>

    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
